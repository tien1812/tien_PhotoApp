<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/fab_layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:padding="@dimen/dp_4"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="106dp"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toLeftOf="@id/fab_down"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_text"
            android:text="Set as Wallpaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:padding="@dimen/dp_4"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="166dp"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toLeftOf="@id/fab_down"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_text"
            android:text="Download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textStyle="bold"
            android:padding="@dimen/dp_4"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="226dp"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toLeftOf="@id/fab_down"
            android:textColor="@color/colorWhite"
            android:background="@drawable/background_text"
            android:text="Set as Lockscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginBottom="100dp"
            android:src="@drawable/ic_wallpaper_black_24dp"
            bind:fabCustomSize="@dimen/dp_40" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fab_wall"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_file_download_white_24dp"
            bind:fabCustomSize="@dimen/dp_40" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_lock_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fab_down"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_screen_lock_landscape_black_24dp"
            bind:fabCustomSize="@dimen/dp_40" />
    </RelativeLayout>
</layout>
